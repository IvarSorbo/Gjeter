<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="@string/animal_count"
        android:textSize="40sp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_description">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/whiteSheep_sheepHerdFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/white"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textInputLayer1">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/blackSheep_sheepHerdFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/black"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textInputLayer2">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/otherSheep_sheepHerdFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/other"
            android:inputType="number"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textInputLayer3"
        android:text="@string/notes"
        android:textSize="40sp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_notes">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/notes_sheepherdFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/notes"
            android:inputType="textMultiLine"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/bt_detailed_obs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textInputLayer4"
        android:text="@string/detailed_description" />
</RelativeLayout>