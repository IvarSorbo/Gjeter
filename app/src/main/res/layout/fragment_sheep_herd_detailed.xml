<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- Number of sheep -->
    <TextView
        android:id="@+id/textView_sheep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="@string/sheep_count"
        android:textSize="30dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_sheep">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/whiteSheep_detSheepHerdFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/white"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textInputLayer1">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/blackSheep_detSheepHerdFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/black"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textInputLayer2">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/otherSheep_detSheepHerdFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/other"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Number of lamb -->
    <TextView
        android:id="@+id/textView_lamb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInputLayer3"
        android:text="@string/lamb"
        android:textSize="30sp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_lamb">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/lamb_detSheepHerdFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/count"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textInputLayer4">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/lamb_org_detSheepHerdFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/original_Count"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Other notes -->
    <TextView
        android:id="@+id/textView_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textInputLayer5"
        android:text="@string/notes_title"
        android:textSize="30sp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_notes">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/notes_detSheepHerdFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/notes"
            android:inputType="textMultiLine"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Owner -->
    <TextView
        android:id="@+id/textView_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInputLayer6"
        android:text="@string/owner_title"
        android:textSize="30sp"/>

    <LinearLayout
        android:id="@+id/eartag_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textView_owner"></LinearLayout>
    <Button
        android:id="@+id/bt_add_eartag_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_more"
        android:layout_below="@id/eartag_fragment_container"
        android:layout_alignParentEnd="true"
        android:drawableStart="@drawable/ic_baseline_add_circle_24px"/>
</RelativeLayout>
