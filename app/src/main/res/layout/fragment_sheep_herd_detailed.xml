<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- Number of sheep -->
    <TextView
        android:id="@+id/textView_sheep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Antall søyer:"
        android:textSize="30dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_sheep">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/whiteSheep_detSheepHerdFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hvit"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textInputLayer1">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/blackSheep_detSheepHerdFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Svart"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textInputLayer2">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/otherSheep_detSheepHerdFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Annen"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Number of lamb -->
    <TextView
        android:id="@+id/textView_lamb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInputLayer3"
        android:text="Lam:"
        android:textSize="30dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_lamb">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/lamb_detSheepHerdFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Antall"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayer5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textInputLayer4">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/lamb_org_detSheepHerdFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Originalt antall"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Owner -->
    <TextView
        android:id="@+id/textView_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInputLayer5"
        android:text="Eier:"
        android:textSize="30dp"/>
    <!--TODO: øremerkefarge - antall AND button or something that programmatically adds more of them -->
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textView_owner">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayer6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_weight="1">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/eartag1_detSheepHerdFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Øremerkefarge"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayer7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_weight="1">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/count1_detSheepHerdFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Antall"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Legg til flere"
        android:layout_below="@id/ll_1"
        android:layout_alignParentEnd="true"
        android:drawableStart="@drawable/ic_baseline_add_circle_24px"/>
</RelativeLayout>
